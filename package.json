{
    "type": "module",
    "version": "0.0.1",
    "name": "insert-coin",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "description": "A client-side Arkade paywall.",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts --clean",
        "format": "prettier --write src test",
        "lint": "prettier --check src test",
        "preview": "vite preview",
        "test": "vitest",
        "dev": "vite"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "typescript": "~5.9.3",
        "prettier": "3.6.2",
        "vitest": "^4.0.13",
        "tsup": "^8.5.0",
        "vite": "^7.2.4"
    },
    "dependencies": {
        "@arkade-os/boltz-swap": "file:../../arkade-os/boltz-swap",
        "@arkade-os/sdk": "^0.3.7",
        "qr": "^0.5.2"
    },
    "engines": {
        "node": ">=22"
    }
}
