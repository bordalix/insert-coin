{
    "type": "module",
    "version": "0.0.1",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "name": "@bordalix/insert-coin",
    "description": "A client-side Arkade paywall.",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts --clean",
        "release:dry-run": "bash scripts/release.sh --dry-run",
        "release:cleanup": "bash scripts/release.sh --cleanup",
        "release": "bash scripts/release.sh",
        "format": "prettier --write src test",
        "lint": "prettier --check src test",
        "preview": "vite preview",
        "test": "vitest",
        "dev": "vite"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "typescript": "~5.9.3",
        "prettier": "3.6.2",
        "vitest": "^4.0.13",
        "tsup": "^8.5.0",
        "vite": "^7.2.4"
    },
    "dependencies": {
        "@arkade-os/boltz-swap": "0.2.10",
        "@arkade-os/sdk": "^0.3.7",
        "qr": "^0.5.2"
    },
    "engines": {
        "node": ">=22"
    }
}
